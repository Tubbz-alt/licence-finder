/* see multi-step.css.erb in the static repo for most of these styles */

/* there are nested lists in our complete steps */
li.done .answer {
  display: block;
  margin-bottom: 1em;
  margin-top: 1em;
}

li.done .answer ul,
.search-picker ul,
.picked-items ul {
  margin: 0 0 0 -2.4em;
  padding-left: 2.1em;
}

.step.current,
.article-container.finished,
header.page-header hgroup {
  margin-right: 0;
}

.current-question h2 {
  font-size: 1em;
}

.done {
  position: relative;
  padding-right: 10em; /* this is to keep the .undo away from the text inside */
}

.done .undo {
  position: absolute;
  top: 0.5em;
  right: 1.5em;
}

a.add {
  float: right;
  padding-left: 0.25em;
}

.search-picker li:nth-child(even),
#sector-navigation ul ul li:nth-child(even) {
  background-color: #f8f7ee;
}

.picked-items {
  background-color: #d5ecea;
  margin-left: 55%;
  padding: 0.5em 3.5% 1.5em 3.5%;
  width: 38%;
}

.picked-items .button {
  display: inline-block;
  padding: 0.35em 0.5em 0.2em;
}

.picked-items ul {
  margin-top: 0.75em;
  margin-bottom: 0.75em;
}

.picked-items ul li,
.search-picker ul li {
  padding: 0.25em 0.3em;
  margin-bottom: 0.25em;
  list-style-type: none;
  overflow: hidden; /* contain floats */
}

.picked-items ul li:nth-child(even) {
  background-color: #e8f0f0;
}

.picked-items ul li span {
  display: inline-block;
  width: 75%;
}

.picked-items ul li a {
  float: right;
  padding-left: 0.25em;
}

.picked-items .button-container {
  margin-top: 1.5em;
  text-align: right;
}

.browse-container,
.search-container {
  clear: left;
  float: left;
  width: 45%;
}

/* sector navigation widget */
#sector-navigation,
#sector-navigation ul {
  margin: 0;
  padding: 0;
  list-style: none;
  overflow: hidden;
  zoom: 1;
}

#sector-navigation li {
  display: block;
  margin: 0.25em 0;
  overflow: hidden;
  clear: both; /* clear under floated "add" links */
}

#sector-navigation li.open ul {
  padding-left: 1em;
}

#sector-navigation li a {
  background-image: url(<%= asset_path "expand-collapse-arrow.png" %>);
  background-position: 0 5px;
  background-repeat: no-repeat;
  padding-left: 1em;
}

#sector-navigation li.open > a {
  background-position: 0 -86px;
}

#sector-navigation li a.add {
  background-image: none;
}

#sector-navigation ul ul li {
  padding: 0 0.25em;
}

.search-container .button {
  margin-left: 0.5em;
}

article.results {
  /* we don't need min-height on licence-finder */
  min-height: 0;
}