<% content_for :page_title, "Licences you may need to apply for - Licence Finder" %>

<%= render partial: 'completed_questions' %>

<div class="article-container finished">
  <article class="outcome">
    <div class="inner group">
      <% if @licences.empty? %>
        <p>
          No licences were found that match your search.
        </p>

          <%= render "govuk_publishing_components/components/button", {
            text: "Start again",
            href: sectors_path,
          } %>

      <% else %>
        <h2>Licences you may need to apply for:</h2>
        <% if ! @licences.all? { |licence| licence.published? } %>
          <p class="hint">
            Further information may not yet be available for some licences.
          </p>
        <% end %>
        <ul>
          <% @licences.each do |licence| %>
            <li>
              <%= render :partial => 'licence', :object => licence %>
            </li>
          <% end %>
        </ul>

      <% end %>
    </div>
  </article>
</div>
