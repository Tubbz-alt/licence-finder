<%= render partial: 'completed_questions' %>

<div class="article-container">
  <article class="results">
    <div class="inner group">
      <% if @licences.empty? %>
        <p>No licences found that match your search.</p>
      <% else %>
        <h2>Licences you may need to apply for:</h2>
        <% if ! @licences.all? { |licence| licence.published? } %>
          <p class="hint">
            Further information may not yet be available for some licences.
          </p>
        <% end %>
        <ul>
          <% @licences.each do |licence| %>
            <li>
              <%- if licence.published? -%>
                <%= link_to licence.title, licence.url %>
                <p><%= licence.short_description %></p>
              <%- else -%>
                <%= licence.title %>
              <%- end -%>
            </li>
          <% end %>
        </ul>

      <% end %>
    </div>
  </article>
</div>
